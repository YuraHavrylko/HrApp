@using System.Web.Mvc.Html
@using HrApp.Models
@model HrApp.Models.Language

@{
    ViewBag.Title = "Edit person language";
    List<TypeLanguage> list = ViewBag.LanguageName;
    List<LanguageLevel> levels = ViewBag.LanguageLevel;
}
<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            @using (Html.BeginForm())
            {
                @Html.ValidationSummary(true)
                <fieldset>
                    <legend>Edit person language</legend>
                    <div class="form-group">
                        @Html.LabelFor(model => model.LanguageName)
                        @Html.DropDownListFor(model => model.LanguageName, new SelectList(list.Select(language => language.LanguageName)), Model.LanguageName, new { @class = "form-control", @required = "required" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.LanguageLevelName)
                        @Html.DropDownListFor(model => model.LanguageLevelName, new SelectList(levels.Select(language => language.LanguageLevelName)), Model.LanguageLevelName, new { @class = "form-control", @required = "required" })
                    </div>
                    @Html.HiddenFor(model => model.PersonId)
                    @Html.HiddenFor(model => model.LanguageId)
                    <div class="form-group">
                        <p>
                            <input type="submit" value="Edit" class="btn btn-success btn-block" />
                        </p>
                    </div>
                </fieldset>
            }
            @Html.ActionLink("Back to Person", "FullInformation", "Home", new { id = Model.PersonId }, null)
        </div>
    </div>
</div>