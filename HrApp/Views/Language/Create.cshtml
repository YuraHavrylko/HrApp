@using System.Web.Mvc.Html
@using HrApp.Models
@using HrApp.Helpers.Extensions
@model HrApp.Models.Language

@{
    ViewBag.Title = "Add person language";
    List<TypeLanguage> list = ViewBag.LanguageName;
    List<LanguageLevel> levels = ViewBag.LanguageLevel;
}

<div class="content-wrapper">
    <section class="content-header">
        <ol class="breadcrumb">
            <li><a href="/Home"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">Edit person data</li>
        </ol>
    </section>
    <section class="content">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <div class="box">
                    <div class="box-body">
                        <p class="text-center" style="font-size: 25px">
                            Add language
                        </p>
                        @using (Html.BeginForm())
                        {
                            <div class="form-group has-feedback  @Html.AddClassIfPropertyInError(x => x.LanguageName, "has-error")">
                                @Html.LabelFor(x => x.LanguageName, new { @class = "col-sm-3 control-label" })
                                <div class="col-sm-9">
                                    @Html.DropDownListFor(model => model.LanguageName, new SelectList(list.Select(language => language.LanguageName)), "Select language", new { @class = "form-control", @type = "text", @placeholder = @Html.DisplayNameFor(m => m.LanguageName) })
                                    <span style="display: block" class="help-block">@Html.ValidationMessageFor(model => model.LanguageName)</span>
                                </div>
                            </div>

                                <div class="form-group has-feedback  @Html.AddClassIfPropertyInError(x => x.LanguageLevelName, "has-error")">
                                    @Html.LabelFor(x => x.LanguageLevelName, new { @class = "col-sm-3 control-label" })
                                    <div class="col-sm-9">
                                        @Html.DropDownListFor(model => model.LanguageLevelName, new SelectList(levels.Select(language => language.LanguageLevelName)), "Select level", new { @class = "form-control", @type = "text", @placeholder = @Html.DisplayNameFor(m => m.LanguageLevelName) })
                                        <span style="display: block" class="help-block">@Html.ValidationMessageFor(model => model.LanguageLevelName)</span>
                                    </div>
                                </div>

                            @Html.HiddenFor(model => model.PersonId)
                            <div class="col-xs-4 col-xs-offset-4">
                                <button type="submit" class="btn btn-sm btn-primary btn-raised btn-block btn-flat">Create</button>
                            </div>
                        }
                    </div>
                    <div class="box-footer clearfix">
                        @Html.ActionLink("Back to Person", "FullInformation", "Home", new { id = Model.PersonId }, null)
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

