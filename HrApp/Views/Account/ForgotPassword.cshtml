@using HrApp.Helpers.Extensions
@model HrApp.ViewModels.Admin.ForgotPasswordViewModel



@using (Ajax.BeginForm("ForgotPassword", "Account", new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "modal-default-content" }))
{
    @Html.AntiForgeryToken()
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title">Enter your email</h4>
    </div>
    <div class="modal-body">
        <div id="error-email" class="form-group has-feedback @Html.AddClassIfPropertyInError(x => x.Email, "has-error")">

            @Html.LabelFor(m => m.Email, new { @class = "col-md-3 control-label" })
            <div class="col-sm-9">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @type = "text" })
                <span style="display: block" class="help-block" id="help-block">@Html.ValidationMessageFor(model => model.Email)</span>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary">Save changes</button>
    </div>
    

}


