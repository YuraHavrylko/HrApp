@model Tuple<IEnumerable<string>, IEnumerable<HrApp.Models.RoleClaim>, string>

@using (Html.BeginForm())
{
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title">Edit claims</h4>
    </div>
    <div class="modal-body">
        <div class="form-group">
            @foreach (var item in Model.Item1)
            {

                <div class="checkbox">
                    <label>
                        <input type="checkbox" name="@item" @(Model.Item2.FirstOrDefault(model => model.ClaimValue == item) != null? "checked=\"checked\"" : "")/> <span class="checkbox-material"><span class="check"></span></span>
                        @item
                    </label>
                </div>

           
           
            }
        </div>
        @Html.Hidden("Id", @Model.Item3)
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary">Save changes</button>
    </div>
}