@using System.Web.Mvc.Html
@using HrApp.Helpers.Extensions
@model HrApp.Models.Job
@{
    ViewBag.Title = "Add person job";
}


<div class="content-wrapper">
    <section class="content-header">
        <ol class="breadcrumb">
            <li><a href="/Home"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">Edit person data</li>
        </ol>

    </section>
    <section class="content">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <div class="box">
                    <div class="box-body">
                        <p class="text-center" style="font-size: 25px">
                            Add job
                        </p>
                        @using (Html.BeginForm())
                        {
                            <div class="form-group has-feedback  @Html.AddClassIfPropertyInError(x => x.JobName, "has-error")">
                                @Html.LabelFor(x => x.JobName, new { @class = "col-sm-2 control-label" })
                                <div class="col-sm-10">
                                    @Html.TextBoxFor(model => model.JobName, new { @class = "form-control", @type = "text" })
                                    <span style="display: block" class="help-block">@Html.ValidationMessageFor(model => model.JobName)</span>
                                </div>
                            </div>

                            @Html.HiddenFor(model => model.PersonId)
                            <div class="col-xs-4 col-xs-offset-4">
                                <button type="submit" class="btn btn-primary  btn-sm btn-raised btn-block btn-flat text-center">Create</button>
                            </div>
                        }
                    </div>
                    <div class="box-footer clearfix">
                        @Html.ActionLink("Back to Person", "FullInformation", "Home", new { id = Model.PersonId }, null)
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
