@using System.Web.Mvc.Html
@using HrApp.Helpers.Extensions
@model HrApp.Models.Interview

@{
    ViewBag.Title = "Add person interview";
}

<div class="content-wrapper">
<section class="content-header">
    <ol class="breadcrumb">
        <li><a href="/Home"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Edit person data</li>
    </ol>
</section>
<section class="content">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="box">
                <div class="box-body">
                    @using (Html.BeginForm())
                    {
                        <div class="form-group has-feedback  @Html.AddClassIfPropertyInError(x => x.InterviewDate, "has-error")">
                            @Html.TextBoxFor(model => model.InterviewDate, new { @class = "form-control", @type = "text", @placeholder = @Html.DisplayNameFor(m => m.InterviewDate) })
                            <span style="display: block" class="help-block">@Html.ValidationMessageFor(model => model.InterviewDate)</span>
                        </div>

                            <div class="form-group has-feedback  @Html.AddClassIfPropertyInError(x => x.Point, "has-error")">
                                @Html.TextBoxFor(model => model.Point, new { @class = "form-control", @type = "text", @placeholder = @Html.DisplayNameFor(m => m.Point) })
                                <span style="display: block" class="help-block">@Html.ValidationMessageFor(model => model.Point)</span>
                            </div>

                            <div class="form-group has-feedback  @Html.AddClassIfPropertyInError(x => x.Comment, "has-error")">
                                @Html.TextBoxFor(model => model.Comment, new { @class = "form-control", @type = "date", @placeholder = @Html.DisplayNameFor(m => m.Comment) })
                                <span style="display: block" class="help-block">@Html.ValidationMessageFor(model => model.Comment)</span>
                            </div>
                            

                            @Html.HiddenFor(model => model.PersonId)
                            <div class="col-xs-5">
                                <button type="submit" class="btn btn-primary btn-raised btn-block btn-flat">Create</button>
                            </div>
                    }
                </div>
                <div class="box-footer clearfix">
                    @Html.ActionLink("Back to Person", "FullInformation", "Home", new { id = Model.PersonId }, null)
                </div>
            </div>
        </div>
    </div>
</section>
</div>


