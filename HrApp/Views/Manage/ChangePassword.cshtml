@using System.Web.Mvc.Html
@using HrApp.Helpers.Extensions
@model HrApp.ViewModels.Admin.ChangePasswordViewModel
@using (Ajax.BeginForm("ChangePassword", "Manage", new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "modal-default-content" ,  }))
{
    @Html.AntiForgeryToken()
    
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title">Change password</h4>
    </div>
    <div class="modal-body">

        <div class="form-group has-feedback @Html.AddClassIfPropertyInError(x => x.OldPassword, "has-error")">

            @Html.LabelFor(m => m.OldPassword, new { @class = "col-md-4 control-label" })
            <div class="col-sm-8">
                @Html.TextBoxFor(m => m.OldPassword, new { @class = "form-control", @type = "password" })
                <span style="display: block" class="help-block">@Html.ValidationMessageFor(model => model.OldPassword)</span>
            </div>
        </div>
        <br />
        <div class="form-group has-feedback @Html.AddClassIfPropertyInError(x => x.NewPassword, "has-error")">

            @Html.LabelFor(m => m.NewPassword, new { @class = "col-md-4 control-label" })
            <div class="col-sm-8">
                @Html.TextBoxFor(m => m.NewPassword, new { @class = "form-control", @type = "password" })
                <span style="display: block" class="help-block">@Html.ValidationMessageFor(model => model.NewPassword)</span>
            </div>
        </div>
        <div class="form-group has-feedback @Html.AddClassIfPropertyInError(x => x.ConfirmPassword, "has-error")">

            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-4 control-label" })
            <div class="col-sm-8">
                @Html.TextBoxFor(m => m.ConfirmPassword, new { @class = "form-control", @type = "password" })
                <span style="display: block" class="help-block">@Html.ValidationMessageFor(model => model.ConfirmPassword)</span>
            </div>
        </div>
        @Html.ValidationSummary(true, "", new {@class = "text-danger error-block text-center",  }, null)
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary">Save changes</button>
    </div>


}
