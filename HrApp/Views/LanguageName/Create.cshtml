@using System.Web.Mvc.Html
@using HrApp.Helpers.Extensions
@model HrApp.Models.TypeLanguage

@{
    ViewBag.Title = "Add language name";
}

<div class="content-wrapper">
    <section class="content-header">
        <ol class="breadcrumb">
            <li><a href="/Home"><i class="fa fa-dashboard"></i> Home</a></li>
            <li>Settings</li>
            <li class="active">Create language </li>
        </ol>
    </section>

    <section class="content">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <div class="box">
                    <div class="box-body">
                        @using (Html.BeginForm())
                        {
                            <div class="form-group has-feedback  @Html.AddClassIfPropertyInError(x => x.LanguageName, "has-error")">
                                @Html.TextBoxFor(model => model.LanguageName, new { @class = "form-control", @type = "text", @placeholder = @Html.DisplayNameFor(m => m.LanguageName) })
                                <span style="display: block" class="help-block">@Html.ValidationMessageFor(model => model.LanguageName)</span>
                            </div>
                            <div class="col-xs-5">
                                <button type="submit" class="btn btn-primary btn-raised btn-block btn-flat">Create</button>
                            </div>
                        }

                    </div>
                    @Html.ActionLink("Back to manage language", "Index", "LanguageName", null, new { @class = "text-center" })
                </div>
            </div>
        </div>
    </section>
</div>