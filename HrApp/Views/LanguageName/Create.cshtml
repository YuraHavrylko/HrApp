@model HrApp.Models.TypeLanguage

@{
    ViewBag.Title = "Add language name";
}
<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            @using (Html.BeginForm())
            {
                @Html.ValidationSummary(true)
                <fieldset>
                    <legend>Add language name</legend>
                    <div class="form-group">
                        @Html.LabelFor(model => model.LanguageName)
                        @Html.TextBoxFor(model => model.LanguageName, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.LanguageName)
                    </div>
                    
                    <div class="form-group">
                        <p>
                            <input type="submit" value="Create" class="btn btn-success btn-block" />
                        </p>
                    </div>
                </fieldset>
            }
            @Html.ActionLink("Back to manage language", "Index", "LanguageName")
        </div>
    </div>
</div>