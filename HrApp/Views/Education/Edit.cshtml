@model HrApp.Models.Education

@{
    ViewBag.Title = "Edit person education";
}
<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            @using (Html.BeginForm())
            {
                @Html.ValidationSummary(true)
                <fieldset>
                    <legend>Edit person education</legend>
                    <div class="form-group">
                        @Html.LabelFor(model => model.EducationalInstitutionName)
                        @Html.TextBoxFor(model => model.EducationalInstitutionName, new { @class = "form-control", @required = "required" })
                        @Html.ValidationMessageFor(model => model.EducationalInstitutionName)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.SpecialityName)
                        @Html.TextBoxFor(model => model.SpecialityName, new { @class = "form-control", @required = "required" })
                        @Html.ValidationMessageFor(model => model.SpecialityName)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.StartDate)
                        @Html.TextBoxFor(model => model.StartDate, new { type = "date", @class = "form-control", @required = "required" })
                        @Html.ValidationMessageFor(model => model.StartDate)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.FinishDate)
                        @Html.TextBoxFor(model => model.FinishDate, new { type = "date", @class = "form-control", @required = "required" })
                        @Html.ValidationMessageFor(model => model.FinishDate)
                    </div>
                    @Html.HiddenFor(model => model.PersonId)
                    @Html.HiddenFor(model => model.EducationId)
                    <div class="form-group">
                        <p>
                            <input type="submit" value="Create" class="btn btn-success btn-block" />
                        </p>
                    </div>
                </fieldset>
            }
            @Html.ActionLink("Back to Person", "FullInformation", "Home", new { id = Model.PersonId }, null)
        </div>
    </div>
</div>