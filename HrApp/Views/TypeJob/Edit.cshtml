@using System.Web.Mvc.Html
@using HrApp.Helpers.Extensions
@using HrApp.Models
@model HrApp.Models.TypeJob

@{
    ViewBag.Title = "Edit person type job";
    List<TypeJob> list = ViewBag.JobName;
}

<div class="content-wrapper">
    <section class="content-header">
        <ol class="breadcrumb">
            <li><a href="/Home"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">Edit job</li>
        </ol>
    </section>
    <section class="content">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <div class="box">
                    <div class="box-body">
                        <p class="text-center" style="font-size: 25px">
                            Edit job
                        </p>
                        @using (Html.BeginForm())
                        {
                            <div class="form-group has-feedback  @Html.AddClassIfPropertyInError(x => x.TypeJobName, "has-error")">
                                @Html.LabelFor(x => x.TypeJobName, new { @class = "col-sm-3 control-label" })
                                <div class="col-sm-9">
                                    @Html.DropDownListFor(model => model.TypeJobName, new SelectList(list.Select(language => language.TypeJobName)), "Select job", new { @class = "form-control", @type = "text", @placeholder = @Html.DisplayNameFor(m => m.TypeJobName) })
                                    <span style="display: block" class="help-block">@Html.ValidationMessageFor(model => model.TypeJobName)</span>
                                </div>
                            </div>

                            @Html.HiddenFor(model => model.PersonId)
                            @Html.HiddenFor(model => model.PersonTypeJobId)
                            <div class="col-xs-4 col-xs-offset-4">
                                <button type="submit" class="btn btn-sm btn-primary btn-raised btn-block btn-flat">Create</button>
                            </div>
                        }
                    </div>
                    <div class="box-footer clearfix">
                        @Html.ActionLink("Back to Person", "FullInformation", "Home", new { id = Model.PersonId }, null)
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>