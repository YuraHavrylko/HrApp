@model HrApp.Models.Person

@{
    ViewBag.Title = "Create person";
}
<div class="content-wrapper">
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                @using (Html.BeginForm())
            {
                    @Html.ValidationSummary(true)
                    <fieldset>
                        <legend>Create person</legend>
                        <div class="form-group ">
                            @Html.LabelFor(model => model.FirstName)
                            @Html.TextBoxFor(model => model.FirstName, new { type = "text", @class = "form-control", @required = "required" })
                            @Html.ValidationMessageFor(model => model.FirstName)
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.LastName)
                            @Html.TextBoxFor(model => model.LastName, new { type = "text", @class = "form-control", @required = "required" })
                            @Html.ValidationMessageFor(model => model.LastName)
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Birthday)
                            @Html.TextBoxFor(model => model.Birthday, new { type = "date", @class = "form-control", @required = "required" })
                            @Html.ValidationMessageFor(model => model.Birthday)
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.City)
                            @Html.TextBoxFor(model => model.City, new { type = "text", @class = "form-control", @required = "required" })
                            @Html.ValidationMessageFor(model => model.City)
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Email)
                            @Html.TextBoxFor(model => model.Email, new { type = "email", @class = "form-control", pattern = "[a-z0-9._%+-]+@[a-z0-9.-]+\\.[a-z]{2,}$", @required = "required" })
                            @Html.ValidationMessageFor(model => model.Email)
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Phone)
                            @Html.TextBoxFor(model => model.Phone, new { @class = "form-control", pattern = "^[0-9]+$", @required = "required" })
                            @Html.ValidationMessageFor(model => model.Phone)
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Salary)
                            @Html.TextBoxFor(model => model.Salary, new { type = "number", @class = "form-control", @required = "required" })
                            @Html.ValidationMessageFor(model => model.Salary)
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.WorkExpireance)
                            @Html.TextBoxFor(model => model.WorkExpireance, new { type = "number", @class = "form-control", @required = "required" })
                            @Html.ValidationMessageFor(model => model.WorkExpireance)
                        </div>
                        <div class="form-group">
                            <p>
                                <input type="submit" value="Create" class="btn btn-success btn-block" />
                            </p>
                        </div>
                    </fieldset>
                }
                @Html.ActionLink("Back to List", "Index")
            </div>
        </div>
    </div>
    </div>