@model HrApp.Models.WorkExperience

@{
    ViewBag.Title = "Edit person work experience";
}
<div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            @using (Html.BeginForm())
            {
                @Html.ValidationSummary(true)
                <fieldset>
                    <legend>Edit person work experience</legend>
                    <div class="form-group">
                        @Html.LabelFor(model => model.CompanyName)
                        @Html.TextBoxFor(model => model.CompanyName, new { @class = "form-control", @required = "required" })
                        @Html.ValidationMessageFor(model => model.CompanyName)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.PositionName)
                        @Html.TextBoxFor(model => model.PositionName, new { @class = "form-control", @required = "required" })
                        @Html.ValidationMessageFor(model => model.PositionName)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.StartDate)
                        @Html.TextBoxFor(model => model.StartDate, new { type = "date", @class = "form-control", @required = "required" })
                        @Html.ValidationMessageFor(model => model.StartDate)
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.FinishDate)
                        @Html.TextBoxFor(model => model.FinishDate, new { type = "date", @class = "form-control", @required = "required" })
                        @Html.ValidationMessageFor(model => model.FinishDate)
                    </div>
                    @Html.HiddenFor(model => model.PersonId)
                    @Html.HiddenFor(model => model.WorkExperienceId)
                    <div class="form-group">
                        <p>
                            <input type="submit" value="Edit" class="btn btn-success btn-block" />
                        </p>
                    </div>
                </fieldset>
            }
        @Html.ActionLink("Back to Person", "FullInformation", "Home", new { id = Model.PersonId }, null)
        </div>
    </div>
</div>